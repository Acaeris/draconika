{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "es2017",
            "es2018",
            "dom"
        ]
    },
    "include": [
        "main.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}